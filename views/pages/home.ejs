        <script>
            function loadCoordinates() {

                $.ajax({
                    type: 'GET',
                    contentType: 'application/json',
                    url: '/alerts',
                    success: function (response) {
                        console.log(response)

                        var mymap = L.map('map').setView([-1.9706, 30.1044], 8.6);

                        style: 'mapbox://styles/mapbox/streets-v9',
                            L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw', {
                                attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' +
                                    '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
                                    'Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                                id: 'mapbox.streets',
                                style: 'mapbox://styles/mapbox/streets-v9'

                            }).addTo(mymap);

                        for (var i = 0; i < response.length; i++) {
                            L.marker([response[i].latitude, response[i].longitude]).addTo(mymap)
                                .bindPopup("<h6>'" + response[i].severity + " '" + response[i].alert_type + " '" + response[i].name + " '" + response[i].excepected_startdate + "'</h6><p><a href=\"fullreport\/" + response[i].sector + "'\" target=\"_blank\" title=\"Opens in a new window\">Full Report</a>  '" + response[i].description + "' </p>").openPopup();
                            L.circle([response[i].latitude, response[i].longitude], 800, {
                                color: 'red',
                                fillColor: '#f03',
                                fillOpacity: 0.5
                            }).addTo(mymap).bindPopup("I am a circle.");
                            var popup = L.popup();
                        }
                    }
                });
            }

        </script>
